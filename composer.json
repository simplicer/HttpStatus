{
  "name": "simplicer/http",
  "description": "Library to manage HTTP status codes and their descriptions.",
  "type": "library",
  "license": "GPLv3",
  "autoload": {
    "psr-4": {
      "Simplicer\\Http\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Antonio Villamarin",
      "email": "anviusr+php@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "scripts": {
    "fix": "export PHP_CS_FIXER_IGNORE_ENV=1; php-cs-fixer fix src/",
    "test": "vendor/bin/phpunit",
    "doc": "tools/phpdocumentor -d src -t doc --template='vendor/saggre/phpdocumentor-markdown/themes/markdown'"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.59",
    "phpunit/phpunit": "^11.2",
    "saggre/phpdocumentor-markdown": "^0.1.4"
  }
}
